{
  "scripts": {
    "start": "by-node-env",
    "start:development": "next dev",
    "start:production": "next start",
    "build": "by-node-env",
    "build:development": "NODE_ENV=development next dev",
    "build:production": "next build",
    "check": "next lint & tsc",
    "format": "by-node-env",
    "format:development": "prettier --write . && stylelint **/*.scss --fix",
    "format:production": "prettier --check .",
    "lint": "npm-run-all --aggregate-output --parallel lint:** --print-label",
    "lint:scripts": "next lint",
    "lint:styles": "stylelint **/*.scss",
    "precommit": "lint-staged && npm run format:production && npm run check && npm run lint",
    "test": "by-node-env",
    "test:development": "jest --watchAll",
    "test:test": "jest --ci --runInBand"
  },
  "dependencies": {
    "@stripe/stripe-js": "^4.1.0",
    "axios": "^1.7.2",
    "classnames": "^2.5.1",
